{
  "kind": "collectionType",
  "collectionName": "events",
  "info": {
    "name": "event",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "title": {
      "type": "string",
      "required": true,
      "maxLength": 30
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": false
    },
    "date": {
      "type": "date",
      "required": true
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "brief": {
      "type": "text",
      "required": true,
      "maxLength": 150
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "files",
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": true,
      "pluginOptions": {}
    },
    "user": {
      "plugin": "users-permissions",
      "model": "user",
      "via": "events"
    },
    "time": {
      "type": "string",
      "required": true
    }
  }
}
